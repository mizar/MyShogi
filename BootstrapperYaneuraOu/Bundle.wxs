        SourceFile="../SetupYaneuraOu/bin/Release/NDP461-KB3102436-x86-x64-AllOS-JPN.exe" />
      <MsiPackage
        Id="MainPackage"
        Cache="no"
        SourceFile="../SetupYaneuraOu/bin/Release/YaneuraOu.msi" />
