    <util:RegistrySearch Root="HKLM"
        Key="SOFTWARE\Microsoft\Net Framework Setup\NDP\v4\Full"
        Value="Release" Variable="Net4FullRelease" />
    <util:RegistrySearch Root="HKLM"
        Key="SOFTWARE\Microsoft\Net Framework Setup\NDP\v4\Full"
        Value="Release" Variable="Net4x64FullRelease" Win64="yes" />
    <util:RegistrySearch Root="HKLM"
        Key="SOFTWARE\Microsoft\Net Framework Setup\NDP\v4\Full\1041"
        Value="Release" Variable="Net4JPNFullRelease" />
    <util:RegistrySearch Root="HKLM"
        Key="SOFTWARE\Microsoft\Net Framework Setup\NDP\v4\Full\1041"
        Value="Release" Variable="Net4JPNx64FullRelease" Win64="yes" />
		<Chain>
      <!-- TODO: Define the list of chained packages. -->
      <!-- <MsiPackage SourceFile="path\to\your.msi" /> -->
      <ExePackage
        Id="DNET461ENU"
        Cache="no" Compressed="yes" PerMachine="yes"
        Permanent="yes" Vital="yes" InstallCommand="/q"
        DetectCondition="(Net4FullVersion > 379893) AND (NOT VersionNT64 OR (Net4x64FullVersion > 379893))"
        InstallCondition="(VersionNT >= v6.0 OR VersionNT64 >= v6.0) AND (NOT (Net4FullVersion > 379893 OR Net4x64FullVersion > 379893))"
